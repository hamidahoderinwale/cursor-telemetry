# Companion Service Dockerfile
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apk add --no-cache \
    python3 \
    make \
    g++ \
    sqlite \
    curl

# Copy package files
COPY components/activity-logger/companion/package*.json ./

# Install dependencies
RUN npm install --production

# Copy source code
COPY components/activity-logger/companion/src ./src
COPY components/activity-logger/companion/config.json ./config.json

# Create data directory for SQLite database
RUN mkdir -p /app/data

# Set environment variables
ENV NODE_ENV=production
ENV PORT=43917
ENV HOST=0.0.0.0

# Expose port
EXPOSE 43917

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
    CMD curl -f http://localhost:43917/health || exit 1

# Start command
CMD ["node", "src/index.js"]


