{
  "name": "cursor-activity-dashboard",
  "version": "2.0.0",
  "description": "Real-time dashboard for Cursor Activity Logger with WebSocket support",
  "main": "components/activity-logger/companion/src/index.js",
  "scripts": {
    "start": "cd components/activity-logger/companion && node src/index.js",
    "start-companion": "cd components/activity-logger/companion && node src/index.js",
    "start-all": "./scripts/start-dashboard.sh",
    "postinstall": "cd components/activity-logger/companion && npm install",
    "dev": "cd components/activity-logger/companion && nodemon src/index.js",
    "test": "node smoke-test.js",
    "health": "make health",
    "smoke-test": "node smoke-test.js",
    "setup": "make setup",
    "build": "make build",
    "lint": "make lint",
    "typecheck": "make typecheck",
    "clean": "make clean",
    "status": "make status",
    "logs": "make logs",
    "format": "prettier --write \"**/*.{js,json,md,html,css}\" --ignore-path .prettierignore",
    "format:check": "prettier --check \"**/*.{js,json,md,html,css}\" --ignore-path .prettierignore"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "prettier": "^3.6.2"
  },
  "keywords": [
    "cursor",
    "activity",
    "dashboard",
    "websocket",
    "real-time",
    "prompt-tracking"
  ],
  "author": "Cursor Activity Logger",
  "license": "MIT"
}
