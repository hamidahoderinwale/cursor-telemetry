{
  "name": "cursor-companion",
  "version": "1.0.0",
  "description": "Companion service for Cursor Activity Logger - file watcher, diff engine, and MCP server",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "reasoning-server": "node src/reasoning-server.js",
    "test": "node --test src/**/*.test.js",
    "format": "prettier --write \"src/**/*.js\" \"*.json\"",
    "format:check": "prettier --check \"src/**/*.js\" \"*.json\"",
    "lint": "prettier --check \"src/**/*.js\" \"*.json\""
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "clipboardy": "^4.0.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "diff": "^5.1.0",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "lunr": "^2.3.9",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "nanoid": "^5.0.0",
    "node-fetch": "^3.3.2",
    "sharp": "^0.33.5",
    "socket.io": "^4.8.1",
    "sqlite3": "^5.1.7",
    "pg": "^8.11.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "prettier": "^3.6.2"
  },
  "keywords": [
    "cursor",
    "telemetry",
    "file-watcher",
    "mcp",
    "privacy"
  ],
  "author": "Cursor Activity Logger",
  "license": "MIT"
}
